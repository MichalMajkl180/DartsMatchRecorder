<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#101010"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🎯 Darts Match Recorder"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#00FF00"
        android:gravity="center"
        android:paddingBottom="12dp" />

    <Button
        android:id="@+id/buttonUpdateTeams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔄 Aktualizovat týmy"
        android:textColor="#FFFFFF"
        android:backgroundTint="#303030"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonOpenSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚙️ Nastavení"
        android:textColor="#FFFFFF"
        android:backgroundTint="#303030"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/labelTeams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🏆 Uložené týmy:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#00FF00"
        android:layout_marginBottom="6dp" />

    <!-- ✅ ListView s tmavým pozadím -->
    <ListView
        android:id="@+id/listTeams"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#333333"
        android:dividerHeight="1dp"
        android:background="#151515"
        android:padding="4dp"
        android:scrollbars="vertical" />

    <!-- ✅ Logovací oblast -->
    <ScrollView
        android:id="@+id/scrollLogsMain"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#0C0C0C"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/logTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00FF00"
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:text="--- LOG START ---" />
    </ScrollView>

</LinearLayout>
